{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "source_ami": "ami-776a659d",
      "instance_type": "t3a.nano",
      "ssh_username": "ec2-user",
      "ami_name": "nodejs",
      "force_delete_snapshot": true,
      "force_deregister": true,
      "tags": {
        "Name": "nodejs"
      },
      "vpc_id": "vpc-074a894841ed93bdb",
      "subnet_id": "subnet-0642944fa4b2f7f9b"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "images/nodejs/files/etc/nginx/conf.d/nginx.conf",
      "destination": "/tmp/nginx.conf"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "curl --silent --location https://rpm.nodesource.com/setup_8.x | bash -",
        "curl --silent -o epel.rpm https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm",
        "yum install -y ./epel.rpm",
        "yum install -y nodejs",
        "amazon-linux-extras install nginx1.12",
        "mv /tmp/nginx.conf /etc/nginx/nginx.conf",
        "systemctl enable nginx",
        "echo \"169.254.169.254 ec2-metadata\" >> /etc/hosts"
      ]
    }
  ]
}
